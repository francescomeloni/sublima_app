<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permetti connessioni HTTP (Mixed Content) globalmente -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Permetti specificamente connessioni a IP locali e qualsiasi dominio (ZERO Esterno + Sublima Cloud) -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Reti locali comuni -->
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
        <domain includeSubdomains="true">10.0.0.1</domain>
        <domain includeSubdomains="true">172.16.0.1</domain>
        
        <!-- Domini Sublima (se mai usano HTTP) -->
        <domain includeSubdomains="true">sublima.it</domain>
        <domain includeSubdomains="true">cloud.sublima.it</domain>
    </domain-config>
</network-security-config>
